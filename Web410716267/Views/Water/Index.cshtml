
@{
    ViewBag.Title = "Index";
}

<h2>建議喝水量</h2>

@using (Html.BeginForm("Index", "Water", FormMethod.Get))
{
    <p>姓名: @Html.TextBox("name")</p>
    <p>體重: @Html.TextBox("weight")</p>
    if (ViewBag.result != "")
    {
        <p>Hi @ViewBag.name, 喝水量:@ViewBag.result</p>
    }
    <input type="submit" name="name" value="送出" />
}
